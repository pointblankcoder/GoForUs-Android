<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_vertical|center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/margin_standard_large">


    <LinearLayout
        android:id="@+id/progressWrapper"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"/>

        <ImageView
            android:id="@+id/accepted"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_check_circle_white_48dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/declined"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/ic_cancel_white_48dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_standard"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textColor="@color/secondary_text_material_dark"
            android:gravity="center"
            android:text="Waiting for your Order to be accepted or declined. Hang Tight!"/>
    </LinearLayout>

</LinearLayout>